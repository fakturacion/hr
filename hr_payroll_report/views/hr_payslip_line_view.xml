<openerp>
    <data>
        <record id="hr_payroll_view_pivot" model="ir.ui.view">
            <field name="name">hr.payslip.line.pivot</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <pivot string="Reporte de Planilla">
                    <field name="employee_id" type="col"/>
                    <field name="salary_rule_id" type="row"/>
                    <field name="total" type="measure"/>
                    <!-- <field name="category_id" type="row"/> -->
                    <!-- <field name="payslip_run_id" type="col"/> -->
                    <!-- <field name="quantity" type="measure"/> -->
                    <!-- <field name="rate" type="measure"/> -->
                    <!-- <field name="amount" type="measure"/> -->
                    <!-- <field name="total" type="measure"/> -->
                </pivot>
            </field>
        </record>

        <record id="view_hr_payslip_line_filter" model="ir.ui.view">
            <field name="name">hr.payslip.line.select</field>
            <field name="model">hr.payslip.line</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='slip_id']" position="after">
                    <filter string="Este mes" name="este_mes" domain="[('date_from','&gt;=', datetime.date.today().replace(day=1).strftime('%Y-%m-%d')),('date_to','&lt;', datetime.date.today().replace(month=datetime.date.today().month+1,day=1).strftime('%Y-%m-%d'))]"/>
                    <filter string="Mes anterior" name="mes_anterior" domain="[('date_from','&gt;',datetime.date.today().replace(month=datetime.date.today().month-1,day=1).strftime('%Y-%m-%d')),('date_to','&lt;',datetime.date.today().replace(month=datetime.date.today().month,day=1).strftime('%Y-%m-%d'))]"/>
                </xpath>
            </field>
        </record>

        <record id="action_hr_payroll_report" model="ir.actions.act_window">
            <field name="name">Reporte de Planilla</field>
            <field name="res_model">hr.payslip.line</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'search_default_mes_anterior': 1}</field>

        </record>

        <menuitem name="Reporte de Planilla"
                  parent="menu_hr_payroll_report_root"
                  action="action_hr_payroll_report"
                  id="menu_hr_payroll_report"/>
    </data>
</openerp>
